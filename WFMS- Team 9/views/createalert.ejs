            <script>
                $(document).ready(function () {
                   
                   
                  
                        dataSource = new kendo.data.DataSource({
                            transport: {
                                read:  {
                                    url: "/getAlertTypes",
                                    dataType: "json"
                                },
                                update: {
                                    url: "/editAlerttype",
                                    dataType: "json",
                                    type:'post'
                                },
                                destroy: {
                                url:"/deleteAlerttype",
                                    dataType: "json",
                                    type:'post'
                                },
                                create: {
                                    url: "/createalert",
                                    dataType: "json",
                                    type:'post'
                                },
                                parameterMap: function(options, operation) {
                                    if (operation !== "read" && options.models) {
                                        return {models: kendo.stringify(options.models)};
                                    }
                                }
                            },
                            batch: true,
                            pageSize: 20,
                            schema: {
                                model: {
                                    id: "alertTypeId",
                                    fields: {
                                        alertTypeId: { editable: false, nullable: true },
                                        alertName: { validation: { required: true } },
                                        recipients: {  validation: { required: true, min: 1} },                                        
                                    }
                                }
                            }
                        });

                    $("#alertsgrid").kendoGrid({
                        dataSource: dataSource,
                        pageable: true,
                        height: 550,
                        toolbar: ["create"],
                        columns: [                         
                           
                            { field: "alertName", title: "Alert Name",width:"25%"},
                            { field: "recipients", title:"Recipients" },                           
                            { command: ["edit", "destroy"], title: "&nbsp;", width: "15%" }],
                        editable: "inline",
                          edit: function(e) {
										    if (!e.model.isNew()) {
										      // Disable the editor of the "id" column when editing data items
										      $('[name="alertName"]').attr("readonly", true);
										    }
										  }
					  });
                    
                    
                    
                });
                
                
